package projetos.conversorDeTemperatura;

import javafx.fxml.FXML;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;

import java.text.DecimalFormat;

/**
 * Controller responsável pela conversão entre Celsius e Fahrenheit.
 * Lógica original totalmente preservada.
 */
public class ConversorController {

    private final DecimalFormat df = new DecimalFormat("0.00");

    @FXML
    public TextField tfNumero;

    @FXML
    public Label labelResultado;

    // ------------------------------
    // Métodos auxiliares
    // ------------------------------
    private double getValorDigitado() {
        return Double.parseDouble(tfNumero.getText());
    }

    private void mostrarResultado(double valor, String unidade) {
        labelResultado.setText("Resultado: " + df.format(valor) + " " + unidade);
    }

    // ------------------------------
    // Conversões
    // ------------------------------
    @FXML
    public void onClickConverterEmCelsius() {
        double fahrenheit = getValorDigitado();
        double celsius = (fahrenheit - 32) * 5 / 9;
        mostrarResultado(celsius, "°C");
    }

    @FXML
    public void onClickConverterEmFahrenheit() {
        double celsius = getValorDigitado();
        double fahrenheit = (celsius * 9 / 5) + 32;
        mostrarResultado(fahrenheit, "°F");
    }
}
