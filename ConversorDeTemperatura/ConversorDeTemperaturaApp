package projetos.conversorDeTemperatura;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.stage.Stage;

import java.io.IOException;

/**
 * Aplicação responsável por carregar e exibir o conversor de temperatura.
 */
public class ConversorApplication extends Application {

    @Override
    public void start(Stage stage) throws IOException {

        // Carrega o arquivo FXML
        FXMLLoader loader =
                new FXMLLoader(ConversorApplication.class.getResource("conversor-view.fxml"));

        // Cena da aplicação
        Scene scene = new Scene(loader.load(), 448, 448);

        // Configurações da janela
        stage.setTitle("Conversor");
        stage.setScene(scene);
        stage.show();
    }
}
