package projetos.calculadoraDeOperacoesBasicas;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.stage.Stage;

import java.io.IOException;

/**
 * Classe principal da aplicação de calculadora.
 * Carrega o arquivo FXML e exibe a interface.
 */
public class CalculadoraApplication extends Application {

    @Override
    public void start(Stage stage) throws IOException {

        // Carrega a interface definida no FXML
        FXMLLoader loader =
                new FXMLLoader(CalculadoraApplication.class.getResource("calculadora-view.fxml"));

        // Cria a cena com dimensões fixas
        Scene scene = new Scene(loader.load(), 448, 448);

        // Configuração da janela principal
        stage.setTitle("Calculadora Simples");
        stage.setScene(scene);
        stage.show();
    }
}
