package projetos.jogoDeAdivinhacao;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.stage.Stage;

/**
 * Aplicação responsável por carregar e exibir o jogo de adivinhação.
 */
public class JogoDeAdivinhacaoApplication extends Application {

    @Override
    public void start(Stage stage) throws Exception {

        // Carrega o layout da interface
        FXMLLoader loader =
                new FXMLLoader(JogoDeAdivinhacaoApplication.class.getResource("jogo-adivinhacao-view.fxml"));

        // Define a cena
        Scene scene = new Scene(loader.load(), 800, 500);

        // Configurações da janela
        stage.setTitle("Jogo de Adivinhação");
        stage.setScene(scene);
        stage.show();
    }
}
