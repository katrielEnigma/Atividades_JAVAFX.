package projetos.cadastroSimples;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.stage.Stage;

public class CadastroSimplesApplication extends Application {

    @Override
    public void start(Stage stage) throws Exception {

        // Carrega o arquivo FXML principal da aplicação
        FXMLLoader loader =
                new FXMLLoader(CadastroSimplesApplication.class.getResource("cadastro-simples-view.fxml"));

        // Criação da cena com dimensões definidas
        Scene mainScene = new Scene(loader.load(), 448, 448);

        // Configurações básicas da janela
        stage.setTitle("Cadastro Simples");
        stage.setScene(mainScene);
